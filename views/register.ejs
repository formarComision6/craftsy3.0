<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head') %>

  <body>
    <%- include('./partials/header') %>
      <div class="login">
        <main class="container">
          <div class="row">
            <div class="col-12 col-md-8 mx-auto mt-5">
              <div class="card py-3">
                <div class="card-body">
                  <h5 class="card-title text-center mb-4">REGISTRATE</h5>
                  <span id="error-empty" class="text-danger"></span>
                  <hr>
                  <form class="row" method="POST" id="form-register" novalidate>
                    <div class="col-12 col-md-6 mb-3">
                      <label for="name" class="form-label">Nombre</label>
                      <input type="text" class="form-control <%= locals.errores && locals.errores.name ? 'is-invalid' : null %> " id="name" aria-describedby="emailHelp"
                        name="name"value="<%= locals.old && locals.old.name ? old.name : null%>">
                        <span id="error-name" class="text-danger small"><%= locals.errores && locals.errores.name ? errores.name.msg : null %> </span>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                      <label for="email" class="form-label">Email</label>
                      <input type="email" class="form-control <%= locals.errores && locals.errores.email ? 'is-invalid' : null %>" id="email" aria-describedby="emailHelp"
                        name="email">
                        <span id="error-email" class="text-danger small"><%= locals.errores && locals.errores.email ? errores.email.msg : null %> </span>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                      <label for="password" class="form-label">Contraseña</label>
                      <input type="password" class="form-control <%= locals.errores && locals.errores.password ? 'is-invalid' : null %>" id="password" name="password">
                      <span id="error-password" class="text-danger small"><%= locals.errores && locals.errores.password ? errores.password.msg : null %> </span>
                    </div>
                    <div class="col-12 col-md-6 mb-3">
                      <label for="password2" class="form-label">Reingresá tu contraseña</label>
                      <input type="password" class="form-control <%= locals.errores && locals.errores.password2 ? 'is-invalid' : null %>" id="password2" name="password2">
                      <span id="error-password2" class="text-danger small"><%= locals.errores && locals.errores.password2 ? errores.password2.msg : null %> </span>
                    </div>
                 
                            <div class="">
                              <div class="mb-3 form-check">
                                <input type="checkbox" class="form-check-input <%= locals.errores && locals.errores.acepta ? 'is-invalid' : null %>" id="acepta" name="acepta">
                                <label class="form-check-label" for="acepta">Acepto <a href="">términos</a>  y
                                  condiciones</label>
                              </div>
                              <span id="error-acepta" class="text-danger small my-2"><%= locals.errores && locals.errores.acepta ? errores.acepta.msg : null %> </span>

                            </div>
                            <div class="text-center">
                              <button type="submit" class="btn btn-primary">Enviar</button>
                            </div>
                </div>
                </form>
              </div>

            </div>
          </div>
      </div>


      </main>
      </div>
      <%- include('./partials/scripts') %>
      <script src="/javascripts/registerValidator.js"></script>
  </body>

</html>