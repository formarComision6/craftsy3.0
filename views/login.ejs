<!DOCTYPE html>
<html lang="es">
    <%- include('./partials/head')  %> 
<body>
    <%- include('./partials/header')  %> 

    <div class="login">
        <main class="container">
            <div class="row">
                <div class="col-6 mx-auto mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title text-center">BIENVENIDO</h5>
                            <form action="" method="POST">
                                <div class="mb-3">
                                  <label for="exampleInputEmail1" class="form-label">Email</label>
                                  <input type="email" placeholder="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
                                </div>
                                <div class="mb-3">
                                  <label for="exampleInputPassword1" class="form-label">Contrase√±a</label>
                                  <input type="password" class="form-control" id="exampleInputPassword1" name="password">
                                </div>
                                <div class="d-flex justify-content-end">
                                    <div class="mb-3 form-check">
                                        <input type="checkbox" class="form-check-input" id="exampleCheck1" name="recordar">
                                        <label class="form-check-label" for="exampleCheck1">Recordarme</label>
                                      </div>
                                </div>
                                
                                <button type="submit" class="btn btn-primary">Enviar</button>
                                <span class="text-danger"><%= locals.errores && errores.email ? errores.email.msg : null%> </span>
                              </form>
                        </div>
                       
                    </div>
                </div>
            </div>
           

        </main>
    </div>
    <%- include('./partials/scripts')  %> 

</body>
</html>