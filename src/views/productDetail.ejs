<!DOCTYPE html>
<html lang="en">
<%- include('./partials/head')  %> 
<body class="productAdd">
    <%- include('./partials/header')  %> 
    <div class="container">
        <div class="formulario w-75">
            <div class="card mb-3  p-5">
                <div class="row g-0">
                  <div class="col-7">
                    <div class="d-flex flex-wrap">
                      <div class="d-flex flex-column flex-wrap w-25">
                        <% producto.images.forEach((imagen,index) => { %>
                          <img onclick="document.getElementById('img-principal').setAttribute('src','/images/<%=imagen.file%>')" src="/images/<%= imagen.file %>" class="w-100" alt="...">
                        <% }) %>
                      </div>
                      <div class="box-img-principal w-75">
                        <img id="img-principal" src="/images/<%= producto.images[0].file %>" class="img-fluid" alt="...">
                      </div>
                    </div>
                   
                  </div>
                
                  <div class="col-5">
                    <div class="card-body">
                      <h5 class="card-title"><%= producto.name %> </h5>
                      <p class="card-text"><%= producto.category.name %> </p>
                      <h4 class="card-text"><small>u$s</small> <%= producto.price.toFixed(2) %> </h4>
                    </div>
                    <div class="d-flex flex-justify-content-around flex-wrap">           
                      <a href="#" class="btn btn-primary ms-2" onclick="agregarItem(event,'<%=producto.id%>')">Agregar al carrito</a>
                    </div>
                  </div>
                 
                 
                </div>
                <div class="relacionados mt-5">
                  <h4>Productos relacionados</h4>
                  <hr>
                  <div class="glider-contain">
                    <div class="glider">
                      <% relacionados.forEach(producto => { %>
                        <a href="/products/detail/<%= producto.id %> ">
                          <div class="d-flex flex-column align-items-center ">
                            <img class="w-100" src="/images/<%= producto.images[0].file %>" alt="">
                            <p class="mt-4"><%= producto.name %> </p>
                          </div>
                        </a>
                      
                      <% }) %>
                     
                    </div>
                    <button aria-label="Previous" class="glider-prev">«</button>
                    <button aria-label="Next" class="glider-next">»</button>
                    <div role="tablist" class="dots"></div>
                  </div>
                </div>
              </div>
        </div>
       
    </div>
    <%- include('./partials/scripts')  %>
    <script src="/javascripts/productDetail.js"></script>
</body>
</html>